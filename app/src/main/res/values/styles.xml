<resources>
    <!-- Base application theme. -->
    <style name="Theme.App" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/saGreen</item>
        <item name="colorPrimaryDark">@color/saGreenDark</item>
        <item name="colorAccent">@color/saGreenDark</item>

        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearanceOverlay.Pill</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearanceOverlay.Cut.Medium</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearanceOverlay.Cut.Medium</item>
    </style>

    <style name="ShapeAppearanceOverlay.Pill">
        <item name="cornerSize">50%</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="ShapeAppearanceOverlay.Cut">
        <item name="cornerSize">25%</item>
        <item name="cornerFamily">cut</item>
    </style>

    <style name="ShapeAppearanceOverlay.Cut.Medium">
        <item name="cornerSize">16dp</item>
        <item name="cornerFamily">cut</item>
    </style>

</resources>